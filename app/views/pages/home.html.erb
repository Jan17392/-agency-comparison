              <a class="btn btn--primary type--uppercase" href="#"> <span class="btn__text">
          Start now</span> </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="imagebg" data-overlay="4">
    <div class="background-image-holder">
